{
  "name": "jQuery DOM",
  "version": "1",
  "manifest_version": 2,
  "description": "Change up youtube comments to have them come in on the fly",
  "browser_action": {
    "name": "Manipulate DOM",
    "icons": ["icon.png"],
    "default_icon": "icon.png"
  },
  "permissions": [
    "http://*/",  "https://*/", "tabs"
  ],
  "background": {
    "scripts": ["jquery.min.js", "ajaxer.js"]
  },
  "content_scripts": [ {
    "matches": [ "http://www.youtube.com/*", "https://www.youtube.com/*"],
    "css": ["basic.css", "animate.css"],
    "js": [ "jquery.min.js", "teacup.js", "async.min.js", "background.js" ]
  }],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
