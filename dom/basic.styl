*:focus
  outline none
html.youtube-social
  &[data-player-size="small"]
    #watch7-sidebar
      transform translate(0, -49px)
  #placeholder-player
    margin-bottom 49px
  #player-api
    margin-bottom 49px
    #overlay-wrapper
      position relative
      width 100%
      box-sizing border-box
      padding 0 13px
      text-align center
      .comment-wrapper
        font-size 15px
      .images
        height 10px
        position relative
        .image
          display inline-block
          position absolute
          &.too-far
            display none
          &:hover
            .image-hover
              display block
          > img
            cursor pointer
            width 10px
            height 10px
            position absolute
          .image-hover
            display none
          .image-hover
            position absolute
            top -55px
            z-index 1000000
            width 50px
            height 50px
            border 1px solid black
            > img
              width 48px
              height 48px
      .hover-comment:empty, .comment:empty
        display none !important
      .hover-comment, .comment
        > div
          padding 5px
          margin 5px
          display inline-block
          text-align left
          background white
          position relative
          z-index 100000
          box-shadow 2px 2px 4px 0px rgba(0,0,0,0.20)
          background white
          div, span
            color black
          span.name
            color #128ee9
          .reply
            margin-left 10px
            margin-top 5px
          .name:after
            content: ': '
